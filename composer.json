{
    "name": "oire/osst",
    "description": "Oire Simple Split Tokens, a ParagonIE Split Token solution implementation",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "paragonie/easydb": "^2",
        "oire/base64": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Andre Polykanine",
            "email": "ap@oire.me",
            "homepage": "https://github.com/Menelion",
            "role": "developer"
        }
    ],
    "support": {
        "issues":   "https://github.com/Oire/Osst/issues",
        "source":   "https://github.com/Oire/Osst"
    },
    "autoload": {
        "psr-4": {
            "Oire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oire\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
